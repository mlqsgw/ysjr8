<tc_include file="inc/header" />

<link rel="stylesheet" type="text/css" href="__TMPL__Public/css/transfer.css" />
	<div id="deal-default" class="clearfix">
		<div style="width:1100;">
		<p class="pos">
			<a href="__ROOT__">首页</a> > <a href="{:UU('loan/index/transfer')}">债权列表</a> > 债权详情
		</p>
		<div id="deal-intro" class="clearfix cf">
			<div class="detail ">
				<div class="cont clearfix">
					<div class="cont_l f_l">
						<div class="detail_title_bg">
							<div class="detail_title">
